<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Lack"
    android:background="#494748">

    <RelativeLayout
        android:layout_width="362dp"
        android:layout_height="131dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="332dp"
        android:background="#2b2b2b"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAdd">

        <TextView
            android:id="@+id/Lack"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="3dp"
            android:text="Lack : "
            android:textColor="#dbdbdb"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Lackname"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="214dp"
            android:layout_toEndOf="@+id/Lack"
            android:text="lackname"
            android:textColor="#dbdbdb"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Lack"
            android:layout_alignParentStart="true"
            android:layout_marginStart="31dp"
            android:layout_marginTop="10dp"
            android:text="Day :"
            android:textColor="#dbdbdb" />

        <TextView
            android:id="@+id/DayValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Lackname"
            android:layout_marginStart="6dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/Day"
            android:text="DayValue"
            android:textColor="#dbdbdb" />

        <TextView
            android:id="@+id/Quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Day"
            android:layout_alignParentStart="true"
            android:layout_marginStart="31dp"
            android:layout_marginTop="5dp"
            android:text="Quantity :"
            android:textColor="#dbdbdb" />

        <TextView
            android:id="@+id/QuantityValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/DayValue"
            android:layout_marginStart="6dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/Quantity"
            android:text=" QuantityValue"
            android:textColor="#dbdbdb" />

        <TextView
            android:id="@+id/Status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Quantity"
            android:layout_alignParentStart="true"
            android:layout_marginStart="31dp"
            android:layout_marginTop="5dp"
            android:text="Status :"
            android:textColor="#dbdbdb" />

        <TextView
            android:id="@+id/StatusValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/QuantityValue"
            android:layout_marginStart="6dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/Status"
            android:text="StatusValue"
            android:textColor="#dbdbdb" />

        <TextView
            android:id="@+id/pH"
            android:layout_width="44dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="84dp"
            android:background="@color/colorPrimary"
            android:text="pH"
            android:textColor="#ffffff"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/phValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="16dp"
            android:text="pHValue"
            android:textColor="#ffffff"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/EC"
            android:layout_width="44dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pH"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="84dp"
            android:background="@color/colorPrimary"
            android:text="EC"
            android:textColor="#ffffff"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ECValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Day"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="39dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            android:text="ECValue"
            android:textColor="#ffffff"
            android:textStyle="bold" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="32dp"
        android:text="Zone :"
        android:textSize="25dp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ZoneInGH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="32dp"
        android:text=" Zone"
        android:textSize="25dp"
        android:textColor="#ffffff"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="44dp"
        android:text="add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/ZoneInGH"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>